<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.hsr.se.mas.fahrplanapp.ConnectionSearchFragment">

    <AutoCompleteTextView
        android:id="@+id/text_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:text="From"
        android:labelFor="@id/text_from"
        tools:ignore="HardcodedText" />

    <AutoCompleteTextView
        android:id="@+id/text_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_from"
        android:text="To"
        android:labelFor="@id/text_to"
        tools:ignore="HardcodedText" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_to"
        android:layout_alignParentStart="true"
        android:id="@+id/selector_departure_arrival" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00"
        android:id="@+id/button_time_selection"
        android:layout_toEndOf="@id/selector_departure_arrival"
        android:layout_below="@id/text_to"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01.01.2017"
        android:id="@+id/button_date_selection"
        android:layout_toEndOf="@id/button_time_selection"
        android:layout_below="@id/text_to"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_search"
        android:id="@+id/button_search"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/button_time_selection"
        tools:ignore="HardcodedText" />

</RelativeLayout>
